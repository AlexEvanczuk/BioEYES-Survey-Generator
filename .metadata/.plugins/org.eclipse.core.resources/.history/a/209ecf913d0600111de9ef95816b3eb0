private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
	JFileChooser jf = new JFileChooser();
	jf.changeToParentDirectory();
	FileFilter filter = new FileNameExtensionFilter(".xls, .xlsx", "xls", "xlsx");
	jf.setFileFilter(filter);	
	System.out.println("test");
	jf.setDialogTitle("Choose a session database");
	int fileValue = jf.showDialog(this, "Choose Session Database");
	if(fileValue==0){
		File f = jf.getSelectedFile();	
		filePath = f.getAbsolutePath();
		while(f.canWrite()){
			JOptionPane.showMessageDialog(this,"Please close the chosen session database before proceeding.");
			fileValue = jf.showDialog(this, "Choose Session Database");
			f = jf.getSelectedFile();	
			filePath = f.getAbsolutePath();
			JOptionPane.showConfirmDialog(this, "Please close","test", );
		}
		jTextField1.setText(filePath);
	}else
		JOptionPane.showMessageDialog(this,"Please select a file!");
	}
private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {
	if(filePath!=null && !filePath.equals("")) {
		String fileDestination = "";
		JFileChooser jf = new JFileChooser();
		jf.setDialogTitle("Select your customized survey folder in dropbox");
		jf.setFileSelectionMode(JFileChooser.DIRECTORIES_ONLY);
		int fileValue = jf.showDialog(this,"Save your surveys to Dropbox");
		if(fileValue==0){
			File f=jf.getSelectedFile();	
			fileDestination = f.getAbsolutePath();
			jTextField1.setText(filePath);
			SurveyGenerator.createSurveyFiles(filePath, fileDestination);
			JOptionPane.showMessageDialog(this, "Your surveys have been generated at: \n\n" + fileDestination + "\n\n"
											+ "Thank you!");
		}
	}
	else
		JOptionPane.showMessageDialog(this,"Please select a file!");
}

